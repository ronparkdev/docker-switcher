{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": { 
      "@images/*": ["./images/*"],
      "@services/*": ["./services/*"],
      "@views/*": ["./views/*"],
      "@utils/*": ["./utils/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "build",
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
